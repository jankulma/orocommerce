{% block _line_item_form_totals_widget %}
    {% do block|merge_context({
        totals: totals
    }) %}

    {% set attr = layout_attr_defaults(attr, {
        '~class': " form__col"~ (totals.quantity == 0 ? " hide"),
        'data-page-component-view': {
            view: 'oropricing/js/app/views/product-total-price-view',
            totals: totals
        }
    }) %}

    <div {{ block('block_attributes') }}>
        {{ block_widget(block) }}
    </div>
{% endblock %}
