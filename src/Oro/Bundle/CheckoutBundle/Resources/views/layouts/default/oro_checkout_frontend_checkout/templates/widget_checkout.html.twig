{% block _raw_notification_widget %}
    {% if app.session.flashbag.peekAll|length > 0 %}
        {% for type, messages in app.session.flashbag.all %}
            {% for message in messages %}
                <div data-role="checkout-flash-notifications" data-type="{{ type }}" data-message="{{ message|trans|e('html_attr') }}"></div>
            {% endfor %}
        {% endfor %}
    {% endif %}
{% endblock %}
