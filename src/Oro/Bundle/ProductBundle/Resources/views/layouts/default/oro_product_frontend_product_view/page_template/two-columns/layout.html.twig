{% block attribute_group_rest_widget %}
    {% set attr = layout_attr_defaults(attr, {
        '~class': ' product-view__attribute-box-wrapper'
    }) %}

    {% set content = block_widget(block) %}
    {% if content|trim|length > 0 %}
    <div {{ block('block_attributes') }}>
        {{ content|raw }}
    </div>
    {% endif %}
{% endblock %}

{% block attribute_group_rest_attribute_group_widget %}
    {% set content = block_widget(block) %}
    {% if content|trim|length > 0 %}
    <section {{ block('block_attributes') }} class="product-view__attribute-box">
        {{ content|raw }}
    </section>
    {% endif %}
{% endblock %}

{% block attribute_label_widget %}
    {% if label|trans|first != '_' %}
        <h2 class="product-view__attribute-box-title">{{ label|trans }}</h2>
    {% endif %}
{% endblock %}

{% block _product_view_related_items_container_widget %}
    {% set attr = layout_attr_defaults(attr, {
    '~class': ' product-view__attribute-box-wrapper product-view__attribute-box-related-items'
    }) %}

    {% if block.children|length > 1 %}
        {% set attr = layout_attr_defaults(attr, {
            '~class': ' product-view__related-items-titles'
        }) %}
    {% endif %}

    {% set content = block_widget(block) %}
    {% if content|trim|length > 0 %}
    <div {{ block('block_attributes') }}>
        {{ content|raw }}
    </div>
    {% endif %}
{% endblock %}
