{#
    Available variables:
    * entity       - CMS page entity Oro\Bundle\CMSBundle\Entity\ContentWidget or null
    * indexer_item - indexer item Oro\Bundle\SearchBundle\Query\Result\Item
#}
{% extends '@OroSearch/Search/searchResultItem.html.twig' %}

{% set showImage = false %}

{% set recordUrl = indexer_item.recordUrl %}
{% set title = indexer_item.selectedData.name %}

{% set entityType = 'oro.cms.contentwidget.entity_label'|trans %}

{% set entityInfo = [
    {'title': 'oro.cms.contentwidget.widget_type.label'|trans, 'value': entity.widgetType ? entity.widgetType|content_widget_type_label : 'N/A'|trans},
    {'title': 'oro.cms.contentwidget.layout.label'|trans, 'value': entity.layout ? entity.layout|content_widget_layout_label(entity.widgetType) : 'N/A'|trans},
    {'title': 'oro.cms.contentwidget.created_at.label'|trans, 'value': entity.createdAt ? entity.createdAt|oro_format_datetime : 'N/A'|trans},
    {'title': 'oro.cms.contentwidget.updated_at.label'|trans, 'value': entity.updatedAt ? entity.updatedAt|oro_format_datetime : 'N/A'|trans},
] %}
