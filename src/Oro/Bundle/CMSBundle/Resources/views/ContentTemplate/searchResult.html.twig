{#
    Available variables:
    * entity       - CMS page entity Oro\Bundle\CMSBundle\Entity\ContentTemplate or null
    * indexer_item - indexer item Oro\Bundle\SearchBundle\Query\Result\Item
#}
{% extends '@OroSearch/Search/searchResultItem.html.twig' %}

{% set showImage = false %}

{% set recordUrl = indexer_item.recordUrl %}
{% set title = indexer_item.selectedData.name %}

{% set entityType = 'oro.cms.contenttemplate.entity_label'|trans %}

{% set entityInfo = [
    {'title': 'oro.cms.contentwidget.created_at.label'|trans, 'value': entity.createdAt ? entity.createdAt|oro_format_datetime : 'N/A'|trans},
    {'title': 'oro.cms.contentwidget.updated_at.label'|trans, 'value': entity.updatedAt ? entity.updatedAt|oro_format_datetime : 'N/A'|trans},
] %}
